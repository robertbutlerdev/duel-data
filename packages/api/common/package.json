{
  "name": "@repo/api-common",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Robert Butler",
    "email": "me@robertbutler.dev"
  },
  "exports": {
    "./config/*": {
      "types": "./src/config/*.ts",
      "default": "./dist/config/*.js"
    },
    "./ioc/*": {
      "types": "./src/ioc/*.ts",
      "default": "./dist/ioc/*.js"
    },
    "./middleware/*": {
      "types": "./src/middleware/*.ts",
      "default": "./dist/middleware/*.js"
    },
    "./types/*": {
      "types": "./src/types/*.ts",
      "default": "./dist/types/*.js"
    },
    "./utils/*": {
      "types": "./src/utils/*.ts",
      "default": "./dist/utils/*.js"
    },
    "./validation/*": {
      "types": "./src/validation/*.ts",
      "default": "./dist/validation/*.js"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate-envs": "environment-generate src/environment.json src/config/environment.generated.ts",
    "lint": "eslint 'src'",
    "lint-fix": "eslint 'src' --fix"
  },
  "dependencies": {
    "@repo/api-entity": "workspace:*",
    "@tsoa/runtime": "6.6.0",
    "bunyan": "1.8.15",
    "bunyan-prettystream": "^0.1.3",
    "express": "5.1.0",
    "http-status-codes": "2.3.0",
    "inversify": "7.5.1",
    "jsonwebtoken": "9.0.2",
    "reflect-metadata": "^0.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/bunyan": "1.8.11",
    "@types/bunyan-prettystream": "^0.1.35",
    "@types/express": "5.0.2",
    "@types/jsonwebtoken": "9.0.9",
    "eslint": "9.28.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3"
  }
}